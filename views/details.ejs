<%- include('./partials/head') %>


<section class="friend-header">
  <a href="/">Terug</a>
</section>

<div class="friend-main-information">


  <!-- Hier moet de goede person id staan -->
  <img 
  src="<%= (person.avatar == '') ? 'assets/placeholder.jpg' : person.avatar %>"
  alt="profiel" 
  onerror="this.src='/assets/images/placeholder.jpg'"
  >

  <!-- Hier moet de goede person id staan -->
  <h1>
    <%= person.name %> 
    <%= person.prefix %> 
    <%= person.surname %>
  </h1>

  <form method="POST" action="/person/<%= person.id %>">
    <% if (person.custom.like) { %>
      <button type="submit" name="actie" value="vind-ik-niet-leuk">👎 vind-ik-niet-leuk</button>
    <% } else { %>
      <button type="submit" name="actie" value="vind-ik-leuk">👍 vind-ik-leuk</button>
    <% } %>
  </form>

</div>

<div class="friend-information">
<div>
  <section class="friend-bio">
  <h2>Over mij</h2>
  <p><%= person.bio %></p>
  </section>
  
  <section>
  <h2>Socials</h2>
  <ul>
    <li>Instagram</li>
    <li>LinkedIn</li>
    <li>Github</li>
  </ul>
  </section>
</div>

<section>
<h2>Reacties</h2>
<%= messages %>
  <!-- <div>
    <% if (person.custom.messages && person.custom.messages.length) { %>
      <ol>
        <% person.custom.messages.forEach(message => { %>
          <li><%= message %></li>
        <% }) %>
      </ol>
    <% } else { %>
      <p>Er zijn nog geen reacties.</p>
    <% } %>
  </div>   -->


<form method="POST" action="/messages/<%= person.id %>">
  <textarea name="message" required placeholder="Laat een bericht achter! :0"></textarea>
  <!-- <input type="text" name="tekst"> -->
  <!-- <input type="tel" name="telefoonnnummer"> -->
  <button type="submit" name="actie" value="verstuur">Verstuur</button>
</form>

</section>
</div>


<%- include('./partials/foot') %>
